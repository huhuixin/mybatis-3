<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hhx.mybatis.mapper.UserMapper">

    <select id="selectById" resultType="user" useCache="true">
        select
        <include refid="base_column"/>
        from user
        where id = #{id}
    </select>

    <insert id="insert">
        insert into user
        (<include refid="base_column"/>)
        values (#{id}, #{name}, #{age})
    </insert>

    <select id="selectByLikeColumn" resultType="user">
        <bind name="likeValue" value="'%' + value + '%'" />
        select
        <include refid="base_column"/>
        from user
        where ${column}
        like #{likeValue}
    </select>

    <sql id="base_column">id, name, age</sql>

    <cache type="com.hhx.mybatis.cache.Cache001"/>
</mapper>